{
  "manifest_version": 2,
  "name": "Splunk row coloring",
  "description": "Colors Rows in Splunk based on configurable options",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["shared.js"]
  },
  "content_scripts": [
    {
      "js": ["shared.js", "content.js"],
      "matches": ["https://*/*"]
    }
  ],
  "permissions": ["storage"]
}
